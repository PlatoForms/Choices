{
  "name": "platoforms-choices",
  "version": "1.0.0",
  "description": "PlatoForms choices widget fork from https://github.com/Choices-js/Choices",
  "scripts": {
    "build": "run-p js:build css:build",
    "js:build": "webpack --config webpack.config.prod.js",
    "css:build": "run-s css:sass css:prefix css:min",
    "css:sass": "sass -I scss src/styles/base.scss public/assets/styles/base.css && sass -I scss src/styles/choices.scss public/assets/styles/choices.css",
    "css:prefix": "postcss public/assets/styles/*.css --use autoprefixer --no-map --env prod --dir public/assets/styles",
    "css:min": "csso public/assets/styles/base.css --output public/assets/styles/base.min.css && csso public/assets/styles/choices.css --output public/assets/styles/choices.min.css"
  },
  "author": "Dapeng Ni",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.com/"
  },
  "main": "public/assets/scripts/choices.js",
  "license": "MIT",
  "devDependencies": {
    "@anephenix/sarus": "^0.4.3",
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@vue/compiler-sfc": "^3.2.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "file-loader": "^6.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mini-css-extract-plugin": "^2.2.0",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "eslint": "^8.28.0",
    "cypress": "11.2.0",
    "typescript": "^4.9.3",
    "ts-loader": "^9.4.1",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.7.0",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "csso-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "webpack": "5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-middleware": "^5.0.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.8.0",
    "webpack-stats-plugin": "^1.0.3"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "fuse.js": "^6.6.2",
    "redux": "^4.2.0"
  }
}
